local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Tạo GUI
local gui = Instance.new("ScreenGui")
gui.Name = "HoldToolGui"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

-- Tạo nút
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 120, 0, 40)
button.Position = UDim2.new(1, -130, 0.5, -20) -- Giữa bên phải màn hình
button.AnchorPoint = Vector2.new(0, 0) -- neo góc trên trái
button.BackgroundColor3 = Color3.fromRGB(50, 150, 250)
button.TextColor3 = Color3.new(1, 1, 1)
button.Text = "Giữ Tool"
button.Parent = gui

-- Biến trạng thái
local holdActive = false

button.MouseButton1Click:Connect(function()
	holdActive = not holdActive
	if holdActive then
		button.Text = "Đang giữ"
		button.BackgroundColor3 = Color3.fromRGB(0, 200, 0)

		-- Nếu người chơi đang cầm Tool thì giữ luôn
		local tool = player.Character and player.Character:FindFirstChildOfClass("Tool")
		if tool then
			spawn(function()
				while holdActive and tool.Parent == player.Character do
					if tool:FindFirstChild("Activate") then
						tool:Activate() -- giả lập giữ chuột
					end
					task.wait(0.2)
				end
			end)
		end
	else
		button.Text = "Giữ Tool"
		button.BackgroundColor3 = Color3.fromRGB(50, 150, 250)
	end
end)
